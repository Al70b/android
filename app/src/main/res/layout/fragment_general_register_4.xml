<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_register_fragment_4_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/register_info_account"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>


        <LinearLayout
            android:id="@+id/sep_register_fragment_4"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_below="@id/tv_register_fragment_4_title"
            android:background="@android:color/black"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sep_register_fragment_4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">


                <ImageButton
                    android:id="@+id/btn_register_invalid_email_syntax"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/clearable_edit_text_register_email"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:src="@drawable/attention_red_icon"
                    android:visibility="invisible" />

                <com.al70b.core.extended_widgets.ClearableEditText
                    android:id="@+id/clearable_edit_text_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:layout_toEndOf="@id/btn_register_invalid_email_syntax"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                </com.al70b.core.extended_widgets.ClearableEditText>

                <ImageButton
                    android:id="@+id/btn_register_invalid_password_syntax"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/clearable_edit_text_register_password"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/attention_red_icon"
                    android:visibility="invisible" />

                <com.al70b.core.extended_widgets.ClearableEditText
                    android:id="@+id/clearable_edit_text_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/clearable_edit_text_register_email"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/btn_register_invalid_password_syntax"
                    android:layout_toEndOf="@id/btn_register_invalid_password_syntax"/>


                <ImageButton
                    android:id="@+id/btn_register_invalid_retype_password_syntax"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/clearable_edit_text_register_retype_password"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/attention_red_icon"
                    android:visibility="invisible" />

                <com.al70b.core.extended_widgets.ClearableEditText
                    android:id="@+id/clearable_edit_text_register_retype_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/clearable_edit_text_register_password"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/btn_register_invalid_retype_password_syntax"
                    android:layout_toEndOf="@id/btn_register_invalid_retype_password_syntax"/>

            </RelativeLayout>

            <CheckBox
                android:id="@+id/check_box_register_accept_terms_of_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accept_terms_of_use_message"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:padding="3dp"
                android:layoutDirection="rtl"/>

            <CheckBox
                android:id="@+id/check_box_register_accept_advertisement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accept_to_receive_ad_messages"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:padding="3dp"
                android:layoutDirection="rtl"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_register_prev_5"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_button"
            android:minWidth="120dp"
            android:text="@string/previous" />

        <Button
            android:id="@+id/btn_register_next_5"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_button"
            android:minWidth="120dp"
            android:text="@string/next" />
    </LinearLayout>

</LinearLayout>