<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/register_info_account"
                android:textSize="17sp"
                android:textColor="@color/dark_red"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/dark_red"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">


                <ImageButton
                    android:id="@+id/btn_register_invalid_email_syntax"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/clearable_edit_text_register_email"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:src="@drawable/attention_red_icon"
                    android:visibility="invisible" />

                <com.al70b.core.extended_widgets.ClearableEditText
                    android:id="@+id/clearable_edit_text_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/btn_register_invalid_email_syntax"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                </com.al70b.core.extended_widgets.ClearableEditText>

                <ImageButton
                    android:id="@+id/btn_register_invalid_password_syntax"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/clearable_edit_text_register_password"
                    android:layout_marginTop="9dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/attention_red_icon"
                    android:visibility="invisible" />

                <com.al70b.core.extended_widgets.ClearableEditText
                    android:id="@+id/clearable_edit_text_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/clearable_edit_text_register_email"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/btn_register_invalid_password_syntax" />


                <ImageButton
                    android:id="@+id/btn_register_invalid_retype_password_syntax"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/clearable_edit_text_register_retype_password"
                    android:layout_marginTop="9dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/attention_red_icon"
                    android:visibility="invisible" />

                <com.al70b.core.extended_widgets.ClearableEditText
                    android:id="@+id/clearable_edit_text_register_retype_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/clearable_edit_text_register_password"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:layout_toRightOf="@id/btn_register_invalid_retype_password_syntax" />

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_register_prev_5"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_button"
            android:minWidth="120dp"
            android:text="@string/previous" />

        <Button
            android:id="@+id/btn_register_next_5"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_button"
            android:minWidth="120dp"
            android:text="@string/next" />
    </LinearLayout>

</LinearLayout>