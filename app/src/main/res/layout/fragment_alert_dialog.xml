<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layoutDirection="rtl" android:orientation="vertical">

    <TextView android:id="@+id/text_view_alert_dialog_title" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentRight="true"
        android:padding="8dp" android:textSize="15dp" />

    <LinearLayout android:id="@+id/layout_alert_dialog" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentRight="true"
        android:layout_below="@id/text_view_alert_dialog_title" android:orientation="horizontal"
        android:padding="5dp">


        <Button android:id="@+id/btn_alert_dialog_ok" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="@string/button_ok" />


    </LinearLayout>
</RelativeLayout>