<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:id="@+id/layout_avchat_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_avchat_settings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:visibility="visible"
        
        >

        <ImageButton
            android:id="@+id/btn_audio_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:src="@drawable/ic_action_mic_muted"
            android:background="@drawable/selector_toggle"
            />

        <ImageButton
            android:id="@+id/btn_video_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:gravity="center"
            android:src="@drawable/ic_action_video_stop"
            android:background="@drawable/selector_toggle"
            />

        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:gravity="center"
            android:src="@drawable/ic_action_switch_video"
            android:background="@drawable/selector_toggle"/>

        <ImageButton
            android:id="@+id/btn_end_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:src="@drawable/ic_action_end_call"
            android:background="@drawable/selector_toggle"/>
    </LinearLayout>

</RelativeLayout>