<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layoutDirection="rtl"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">

    <ImageButton
        android:id="@+id/actionbar_member_profile_imgbtn_back"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_action_forward" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/actionbar_member_profile_circleimg_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:layout_toEndOf="@id/actionbar_member_profile_imgbtn_back"
        android:padding="8dp"
        android:src="@drawable/avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/actionbar_member_profile_circleimg_profile"
        android:maxWidth="200dp"
        android:orientation="vertical"
        android:layoutDirection="inherit">

        <TextView
            android:id="@+id/actionbar_member_profile_txtview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="الإسم الكامل هنا"
            android:textColor="@android:color/white"
            android:textAlignment="viewStart"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/actionbar_member_profile_txtview_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:text="الإسم الكامل هنا"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>