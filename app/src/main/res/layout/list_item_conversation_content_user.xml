<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layoutDirection="ltr"
    android:paddingRight="4dp"
    android:paddingLeft="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <com.inscripts.custom.EmojiTextView
        android:id="@+id/emoji_tv_list_item_messages_message_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:textColor="#fff"
        android:textSize="15sp"
        android:minWidth="65dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/message_current_user"/>

    <TextView
        android:id="@+id/text_view_list_item_messages_date_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textColor="@color/bright_gray"
        android:layout_margin="4dp"
        android:layout_below="@id/emoji_tv_list_item_messages_message_user"
        android:layout_alignEnd="@id/emoji_tv_list_item_messages_message_user"
        android:textSize="12sp"
        android:visibility="gone"
        />


</RelativeLayout>