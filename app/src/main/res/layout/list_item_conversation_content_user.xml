<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layoutDirection="ltr"
    android:paddingBottom="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="2dp">

    <com.inscripts.custom.EmojiTextView
        android:id="@+id/emoji_tv_list_item_messages_message_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/message_current_user"
        android:minWidth="55dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingEnd="7dp"
        android:paddingStart="7dp"
        android:textColor="#fff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/text_view_list_item_messages_date_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/emoji_tv_list_item_messages_message_user"
        android:layout_below="@id/emoji_tv_list_item_messages_message_user"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/messages_datetime_color"
        android:textSize="12sp"
        android:visibility="gone" />


</RelativeLayout>