<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id='@+id/tv_friends_list_of_friends_requests'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            />

        <ImageButton
            android:id="@+id/img_btn_friends_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_collapse"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <ListView
        android:id="@+id/list_view_friends_requests_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout_friendsA_failed_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_view_friendsA_failed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/failed_loading_friends"/>

        <TextView
            android:id="@+id/tv_friends_no_friends_were_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_friends_were_found"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id='@+id/tv_friends_list_of_friends'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_friendsA_requests_failed_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_friends_no_friends_requests_were_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_friends_requests"/>
    </LinearLayout>

    <com.al70b.core.extended_widgets.pull_load_listview.LoadMoreListView
        android:id="@+id/list_view_friends_activity_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>