<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context="com.al70b.core.activities.ContactUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/et_contactUsA_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"

            android:hint="@string/subject"
            android:maxLength="255"
            android:maxLines="1" />

        <EditText
            android:id="@+id/et_contactUsA_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:minHeight="300dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/et_contactUsA_subject"
            android:background="@drawable/advanced_details_about_me_background"
            android:inputType="textImeMultiLine"
            android:maxLength="6000" />

        <Button
            android:id="@+id/btn_contactUsA_send"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:background="@drawable/red_button"
            android:minWidth="140dp"
            android:onClick="onClickLoginButton"
            android:layout_below="@id/et_contactUsA_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/send"
            android:textAlignment="center" />
    </RelativeLayout>
</ScrollView>
