<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="22dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/list_item_member_header">

        <TextView
            android:id="@+id/text_view_member_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="7dp"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="2.4"
            android:orientation="vertical"
            android:padding="2dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_member_item_profile"
                android:layout_width="@dimen/medium_member_profile_picture"
                android:layout_height="@dimen/medium_member_profile_picture"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/avatar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_member_item_age"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textSize="18sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_image_member_item_status"
                    android:layout_width="0dp"

                    android:layout_weight="1"
                    android:layout_height="@dimen/status_circle_user"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/status_online" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_member_item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="2dp"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progress_bar_sending_friend_request"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/image_view_members_item_add"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="8dp"
                    android:clickable="true"
                    android:src="@drawable/ic_action_add_person" />


                <ImageView
                    android:id="@+id/image_view_members_item_send"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:src="@drawable/ic_action_new_email" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>