<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/clickable_text_view_change_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="@string/clickable_text_view_change_email"
                android:textColor="@color/link_text"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_margin="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_view_user_data_account_emailA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="4dp"
                        android:text="@string/edTxtEmail"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_view_user_data_account_emailB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_text_user_data_account_retype_emailB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.5"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:textColor="@color/dark_red"/>

                    <ImageButton
                        android:id="@+id/btn_user_data_invalid_email_syntax"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/attention_red_icon"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_user_data_account_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="4dp"
                        android:text="@string/password"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_text_user_data_account_password_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.5"
                        android:gravity="center_horizontal|center_vertical"
                        android:inputType="textPassword"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:visibility="visible"
                        android:textColor="@color/dark_red"
                        />

                    <ImageButton
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="4dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingRight="2dp"
                        android:src="@drawable/attention_red_icon"
                        android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/clickable_text_view_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:text="@string/clickable_text_view_change_password"
                android:textColor="@color/link_text"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_margin="8dp"/>

            <LinearLayout
                android:id="@+id/layout_user_data_account_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="4dp"
                        android:text="@string/password"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_text_user_data_account_password_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.5"
                        android:gravity="center_horizontal|center_vertical"
                        android:inputType="textPassword"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:visibility="visible"
                        android:textColor="@color/dark_red"/>

                    <ImageButton
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="4dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingRight="2dp"
                        android:src="@drawable/attention_red_icon"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_view_user_data_account_passwordA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.3"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="4dp"
                        android:text="@string/new_password"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_text_user_data_account_passwordB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/dark_red"/>

                    <ImageButton
                        android:id="@+id/btn_user_data_invalid_password_syntax"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="4dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingRight="2dp"
                        android:src="@drawable/attention_red_icon"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_view_user_data_account_retype_passwordA"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1.3"
                        android:gravity="center_horizontal|center_vertical"
                        android:padding="4dp"
                        android:text="@string/retype_password"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/edit_text_user_data_account_retype_passwordB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.5"
                        android:gravity="center_horizontal|center_vertical"
                        android:inputType="textPassword"
                        android:padding="4dp"
                        android:textSize="16sp"
                        android:textColor="@color/dark_red"/>

                    <ImageButton
                        android:id="@+id/btn_user_data_invalid_retype_password_syntax"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="4dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingRight="2dp"
                        android:src="@drawable/attention_red_icon"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_user_data_account_cancel"
                    style="@style/button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/red_button"
                    android:minWidth="120dp"
                    android:text="@string/cancel"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_user_data_account_done"
                    style="@style/button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/red_button"
                    android:minWidth="120dp"
                    android:text="@string/done"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>