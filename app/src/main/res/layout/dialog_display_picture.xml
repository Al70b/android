<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_view_display_picture_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7d000000"
        android:layoutDirection="rtl">

        <ImageButton
            android:id="@+id/img_btn_displayPictureD_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_cancel" />

        <TextView
            android:id="@+id/tv_displayPictureD_username"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@id/img_btn_displayPictureD_close"
            android:layoutDirection="rtl"
            android:paddingBottom="5dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="16sp" />


    </RelativeLayout>


</FrameLayout>