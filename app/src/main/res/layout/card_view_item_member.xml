<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl">

        <RelativeLayout
            android:id="@+id/layout_card_view_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/list_item_member_header"
            android:padding="4dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_member_item_status"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/status_online" />

            <TextView
                android:id="@+id/text_view_member_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="2dp"
                android:layout_toStartOf="@id/circle_image_member_item_status"
                android:ellipsize="end"
                android:textDirection="rtl"
                android:padding="4dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imv_view_member_item_profile"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout_card_view_header"
            android:scaleType="fitXY"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/text_view_member_item_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/imv_view_member_item_profile"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#b9b9b9"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/text_view_member_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@id/text_view_member_item_age"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="#b9b9b9"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_below="@id/text_view_member_item_address"
            android:gravity="center"
            android:background="#efefef"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progress_bar_sending_friend_request"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/image_view_members_item_add"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_margin="2dp"
                android:clickable="true"
                android:src="@drawable/ic_action_add_person" />


            <ImageView
                android:id="@+id/image_view_members_item_send"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:src="@drawable/ic_action_new_email"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>