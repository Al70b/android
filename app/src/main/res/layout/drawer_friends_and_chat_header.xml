<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/friends_drawer_header_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="inherit"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:padding="2dp">

        <com.al70b.core.extended_widgets.StatusList
            android:id="@+id/drawer_header_status_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp" />

        <ImageButton
            android:id="@+id/img_btn_friends_drawer_header_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_action_settings"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/friends_drawer_header_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="inherit"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:padding="2dp">

        <EditText
            android:id="@+id/et_friends_drawer_header_status"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:maxLength="60"
            android:singleLine="true"
            android:hint="@string/set_status"
            />

        <ImageButton
            android:id="@+id/img_btn_friends_drawer_header_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_action_accept_holo_light"
            android:background="@android:color/transparent"
            android:visibility="invisible"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="7dp"
        android:background="@color/dark_red" />

</LinearLayout>