<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Layout for filling a search query -->
    <RelativeLayout
        android:id="@+id/layout_members_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:visibility="visible">

        <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            android:focusable="true"
            android:focusableInTouchMode="true" />


        <TextView
            android:id="@+id/text_view_members_look_for_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:padding="9dp"
            android:text="@string/register_looking_for"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text_view_members_look_for_gender"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/text_view_members_look_for_gender"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/checkbox_members_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:textColor="@color/black" />


            <CheckBox
                android:id="@+id/checkbox_members_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_members_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text_view_members_look_for_gender"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:padding="9dp"
            android:text="@string/age"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text_view_members_age"
            android:layout_below="@id/text_view_members_look_for_gender"
            android:layout_marginRight="25dp"

            android:layout_toLeftOf="@id/text_view_members_age"
            android:layoutDirection="rtl"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_members_age_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:text="@string/from"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_text_members_age_from"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:nextFocusLeft="@+id/edit_text_members_age_to"
                android:nextFocusUp="@id/edit_text_members_age_from"
                android:singleLine="true"
                android:textColor="@color/dark_red"

                />

            <TextView
                android:id="@+id/text_view_members_age_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:padding="9dp"
                android:text="@string/to"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_text_members_age_to"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:singleLine="true"
                android:textColor="@color/dark_red"

                />

            <TextView
                android:id="@+id/text_view_members_age_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:text="@string/year"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/image_view_members_help"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/help"
                android:layout_marginRight="15dp"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:clickable="true"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_members_temp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_members_age"
            android:layout_marginRight="8dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="5dp">

            <CheckBox
                android:id="@+id/checkbox_members_with_pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="@string/members_with_pictures_only"
                android:textColor="@color/black" />


            <CheckBox
                android:id="@+id/checkbox_members_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="@string/members_online_only"
                android:textColor="@color/black" />


            <CheckBox
                android:id="@+id/checkbox_members_close_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="@string/members_close_by"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/button_members_search"
            style="@style/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_members_temp2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/red_button"
            android:minWidth="140dp"
            android:text="@string/search" />
    </RelativeLayout>

    <!-- end of layout for search query -->



    <!-- query result layout -->
    <LinearLayout
        android:id="@+id/layout_members_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >


        <!-- header displaying search query -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/bar">

                <ImageView
                    android:id="@+id/image_view_members_expand"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:clickable="true"
                    android:src="@drawable/ic_action_collapse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="@string/current_search"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"

                    />

            </RelativeLayout>

            <!-- the query text view -->
            <TextView
                android:id="@+id/text_view_members_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- end of header -->


        <!-- a container, with a border -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="2dp"
            android:background="@color/bright_gray">

        <LinearLayout
            android:id="@+id/layout_members_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/shadowed_white"
            android:visibility="gone">

            <com.al70b.core.extended_widgets.pull_load_listview.LoadMoreListView
                android:id="@+id/list_view_user_members"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@color/shadowed_white"/>
        </LinearLayout>


        <!-- loading layout -->
        <LinearLayout
            android:id="@+id/layout_members_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@color/shadowed_white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/search_in_process"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- loading FAILED layout -->
        <LinearLayout
            android:id="@+id/layout_members_failed_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/shadowed_white">

            <TextView
                android:id="@+id/text_view_user_members_failed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>