<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_login"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/shadowed_white"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="30dp">

    <ImageButton
        android:id="@+id/img_btn_invalid_email_syntax"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/clearable_edit_text_email"
        android:layout_marginTop="9dp"
        android:src="@drawable/attention_red_icon"
        android:visibility="invisible"
        android:background="@android:color/transparent"/>

    <com.al70b.core.extended_widgets.AutocompleteClearableEditText
        android:id="@+id/clearable_edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/img_btn_invalid_email_syntax" />


    <ImageButton
        android:id="@+id/img_btn_invalid_password_syntax"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/clearable_edit_text_password"
        android:layout_marginTop="9dp"
        android:src="@drawable/attention_red_icon"
        android:visibility="invisible"
        android:background="@android:color/transparent"/>

    <com.al70b.core.extended_widgets.ClearableEditText
        android:id="@+id/clearable_edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clearable_edit_text_email"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/img_btn_invalid_password_syntax"

        />




    <Button
        android:id="@+id/btn_login"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clearable_edit_text_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/red_button"
        style="@style/button_text"
        android:minWidth="140dp"
        android:text="@string/btnLogin"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_view_login_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="@string/forgot_password"
        android:textColor="@color/link_text"
        android:textSize="16sp"
        android:clickable="true"
        android:textStyle="italic"
        />


</RelativeLayout>