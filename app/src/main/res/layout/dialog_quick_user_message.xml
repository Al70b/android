<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="inherit"
        android:orientation="horizontal"
        android:padding="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_quick_user_message_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/avatar"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_view_quick_user_message_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:text="@string/send"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_red"
        android:layoutDirection="inherit"
        android:paddingTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_text_alert_quick_user_message_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="400"
                android:maxLines="10"
                android:verticalScrollbarPosition="left"
                android:minHeight="100dp"
                android:inputType="textMultiLine"
                android:maxHeight="200dp"
                android:background="@drawable/contact_us_message_background"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:gravity="top|start"
                android:textColor="@android:color/black"
                android:hint="@string/your_message"
                android:padding="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_alert_quick_user_message_positive"
            style="@style/button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:text="@string/send" />

        <Button
            android:id="@+id/btn_alert_quick_user_message_negative"
            style="@style/button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:text="@string/cancel" />

    </LinearLayout>
</LinearLayout>