<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:layoutDirection="ltr"
    android:paddingRight="4dp"
    android:paddingLeft="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_list_item_messages_profile_picture_member"
        android:layout_width="@dimen/small_member_profile_picture"
        android:layout_height="@dimen/small_member_profile_picture"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/emoji_tv_list_item_messages_last_member"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/avatar" />


    <com.inscripts.custom.EmojiTextView
        android:id="@+id/emoji_tv_list_item_messages_last_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/circle_image_list_item_messages_profile_picture_member"
        android:background="@drawable/message_other_user"
        android:padding="10dp"
        android:textColor="#313131"
        android:minWidth="65dp"
        android:layout_marginEnd="45dp"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/text_view_list_item_messages_date_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/emoji_tv_list_item_messages_last_member"
        android:layout_below="@id/emoji_tv_list_item_messages_last_member"
        android:layout_marginTop="3dp"
        android:padding="3dp"
        android:textColor="@color/bright_gray"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>