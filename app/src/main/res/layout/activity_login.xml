<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_login"
    tools:context="com.al70b.core.activities.LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageButton
            android:id="@+id/img_btn_invalid_email_syntax"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/attention_red_icon"
            android:visibility="invisible" />

        <com.al70b.core.extended_widgets.AutocompleteClearableEditText
            android:id="@+id/clearable_edit_text_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageButton
            android:id="@+id/img_btn_invalid_password_syntax"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/attention_red_icon"
            android:visibility="invisible" />

        <com.al70b.core.extended_widgets.ClearableEditText
            android:id="@+id/clearable_edit_text_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        style="@style/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:background="@drawable/red_button"
        android:minWidth="140dp"
        android:text="@string/btnLogin"
        android:textAlignment="center"
        android:onClick="onClickLoginButton"
        />

    <Button
        android:id="@+id/text_view_login_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:text="@string/forgot_password"
        android:textColor="@color/link_text"
        android:textSize="16sp"
        android:textStyle="italic"
        android:onClick="onClickForgotPassword"/>


</LinearLayout>